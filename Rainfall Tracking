#include<iostream>

using namespace std;
int getdata()
{
	float data[3][4];
	int i,j;
	cout<<"Enter the data for the rainfall"<<endl;
	for(i=0;i<3;i++)
	{  cout<<"City"<<i+1<<":";
		for(j=0;j<4;j++)
		{ cout<<"Month "<<j+1<<":";
			cin>>data[i][j];
		}
		
	}
	return 0;
}
int showdata()	
{   float data[3][4],sum=0;
	cout<<"City\tMonth1\tMonth2\tMonth3\tMonth4"<<endl;
	for(int i=0;i<3;i++)
	{   cout<<"City"<<i+1<<":\t";
		for(int j=0;j<4;j++)
		{   
			
			cout<<data[i][j]<<"\t";
			sum+=data[i][j];
		}
	    	cout<<"Avg is:"<<sum/4<<endl;
	}
	return 0;
}

	
int main()
{
	getdata();
	showdata();
	
	return 0;
}

