#include <iostream>
using namespace std;

#define MAX 100   // maximum size of stack

class Stack {
    char arr[MAX];
    int top;

public:
    Stack() {
        top = -1;
    }

    // Push operation
    void push(char c) {
        if (top == MAX - 1) {
            cout << "Stack Overflow\n";
        } else {
            arr[++top] = c;
        }
    }

    // Pop operation
    char pop() {
        if (top == -1) {
            cout << "Stack Underflow\n";
            return '\0';
        } else {
            return arr[top--];
        }
    }

    // Peek operation
    char peek() {
        if (top == -1) {
            cout << "Stack is Empty\n";
            return '\0';
        } else {
            return arr[top];
        }
    }

    // isEmpty operation
    bool isEmpty() {
        return (top == -1);
    }
};

// Function to check for matching pair of brackets
bool isMatchingPair(char open, char close) {
    return (open == '(' && close == ')') ||
           (open == '{' && close == '}') ||
           (open == '[' && close == ']');
}

// Function to check if expression is balanced
bool isBalanced(string expr) {
    Stack s;

    for (int i = 0; i < expr.length(); i++) {
        char ch = expr[i];

        if (ch == '(' || ch == '{' || ch == '[') {
            s.push(ch);
        } 
        else if (ch == ')' || ch == '}' || ch == ']') {
            if (s.isEmpty())
                return false; // no matching opening bracket
            char topChar = s.pop();
            if (!isMatchingPair(topChar, ch))
                return false; // mismatched pair
        }
    }

    return s.isEmpty(); // true if all brackets matched
}

int main() {
    string expression;
    cout << "Enter an expression: ";
    cin >> expression;

    if (isBalanced(expression))
        cout << "The expression is balanced.\n";
    else
        cout << "The expression is NOT balanced.\n";

    return 0;
}
