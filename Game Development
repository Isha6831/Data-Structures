// Bubble sort
#include<iostream>
using namespace std;

class BubbleSort 
{
private:
    int scores[100]; // Assuming max 100 players
    int n;

public:
    void input() 
    {
        cout << "Enter the number of players you wish to input: ";
        cin >> n;

        cout << "Enter " << n << " scores to be sorted: ";
        for (int i = 0; i < n; i++) 
        {
            cin >> scores[i];
        }
    }

    void sort() 
    {
        int temp;
        for (int i = 0; i < n - 1; i++) 
        {
            for (int j = 0; j < n - i - 1; j++) 
            {
                if (scores[j] > scores[j + 1]) 
                {
                    temp = scores[j];
                    scores[j] = scores[j + 1];
                    scores[j + 1] = temp;
                }
            }
        }
    }

    void display() 
    {
        cout << "The simulation of a level up using bubble sort in ascending order of scores is:\n";
        for (int i = 0; i < n; i++) 
        {
            cout << scores[i] << " ";
        }
        cout << endl;
    }
};

int main() 
{
    BubbleSort sorter;
    sorter.input();
    sorter.sort();
    sorter.display();

    return 0;
}
